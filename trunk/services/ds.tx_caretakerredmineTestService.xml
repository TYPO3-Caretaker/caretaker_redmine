<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<ROOT>
		<TCEforms>
			<sheetTitle>Server</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
		
			<redmine_url>
				<TCEforms>
					<label>Host where Redmine can be reached (without protocol and tailing / !)</label>
					<config>
						<type>input</type>
					</config>
				</TCEforms>
			</redmine_url>

			<protocol>
				<TCEforms>
					<label>Protocol for communication</label>
					<config>
						<type>select</type>
						<items>
					    	<numIndex index="0">
					    		<numIndex index="0">HTTP</numIndex>
								<numIndex index="1">http</numIndex>
					    	</numIndex>
					    	<numIndex index="1">
					    		<numIndex index="0">HTTPS</numIndex>
								<numIndex index="1">https</numIndex>
					    	</numIndex>
						</items>
					</config>
				</TCEforms>
			</protocol>
			
			<api_key>
				<TCEforms>
					<label>Redmine API key</label>
					<config>
						<type>input</type>
					</config>
				</TCEforms>
			</api_key>

			<method>
				<TCEforms>
					<label>Value to retrieve</label>
					<config>
						<type>select</type>
						<items>
					    	<numIndex index="0">
					    		<numIndex index="0">Number of all open tickets</numIndex>
								<numIndex index="1">allOpenTickets</numIndex>
					    	</numIndex>
							<numIndex index="1">
					    		<numIndex index="0">Number of open tickets in project</numIndex>
								<numIndex index="1">openTicketsInProject</numIndex>
					    	</numIndex>
						</items>
					</config>
				</TCEforms>
			</method>

			<optWarningThreshold>
				<TCEforms>
					<label>Warning threshold</label>
					<config>
						<type>input</type>
						<eval>int</eval>
						<size>5</size>
					</config>
				</TCEforms>
			</optWarningThreshold>

			<optErrorThreshold>
				<TCEforms>
					<label>Error threshold</label>
					<config>
						<type>input</type>
						<eval>int</eval>
						<size>5</size>
					</config>
				</TCEforms>
			</optErrorThreshold>

			<optProjectId>
				<TCEforms>
					<label>Project ID</label>
					<config>
						<type>input</type>
						<size>20</size>
					</config>
				</TCEforms>
			</optProjectId>
		</el>
	</ROOT>
</T3DataStructure>