<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<ROOT>
		<TCEforms>
			<sheetTitle>Server</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
		
			<redmine_url>
				<TCEforms>
					<label>Host where Redmine can be reached (without protocol!)</label>
					<config>
						<type>input</type>
					</config>
				</TCEforms>
			</redmine_url>

			<protocol>
				<TCEforms>
					<label>Protocol for communication</label>
					<config>
						<type>select</type>
						<items>
					    	<numIndex index="0">
					    		<numIndex index="0">HTTP</numIndex>
								<numIndex index="1">http</numIndex>
					    	</numIndex>
					    	<numIndex index="1">
					    		<numIndex index="0">HTTPS</numIndex>
								<numIndex index="1">https</numIndex>
					    	</numIndex>
						</items>
					</config>
				</TCEforms>
			</protocol>
			
			<api_key>
				<TCEforms>
					<label>Redmine API key</label>
					<config>
						<type>input</type>
					</config>
				</TCEforms>
			</api_key>

			<method>
				<TCEforms>
					<label>Value to retrieve</label>
					<config>
						<type>select</type>
						<items>
					    	<numIndex index="0">
					    		<numIndex index="0">Number of open tickets</numIndex>
								<numIndex index="1">openTickets</numIndex>
					    	</numIndex>
						</items>
					</config>
				</TCEforms>
			</method>
		</el>
	</ROOT>
</T3DataStructure>